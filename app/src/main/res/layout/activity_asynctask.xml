      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>
  <TextView
      android:id="@+id/tvResult"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>

  <Button
      android:text="start retrofit"
      android:id="@+id/btnStartRetrofit"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>
